<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkbox Demonstration"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your favourite city : "
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/text1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"/>

    <CheckBox
        android:id="@+id/check1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pune"
        android:textSize="30dp"
        android:layout_below="@id/text2"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"/>

    <CheckBox
        android:id="@+id/check2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mumbai"
        android:textSize="30dp"
        android:layout_below="@id/check1"
        android:layout_marginLeft="100dp"/>

    <CheckBox
        android:id="@+id/check3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delhi"
        android:textSize="30dp"
        android:layout_below="@id/check2"
        android:layout_marginLeft="100dp"/>

    <CheckBox
        android:id="@+id/check4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bangalore"
        android:textSize="30dp"
        android:layout_below="@id/check3"
        android:layout_marginLeft="100dp"/>

    <Button
        android:id="@+id/show_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show me"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/check4"
        android:layout_marginTop="50dp"/>

</RelativeLayout>